<div class="container">
  <h3 class="text-center">Contact Form</h3>
  
  <%= form_for "/container" do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    
    <%= f.label :email %>
    <%= f.text_field :email %>
    
    <%= f.label :Comments %>
    <%= f.text_area :Comments %>
    
    <%= f.submit 'submit' %>
  <% end %>
</div>